<div class="title row">
  <div class="col-md-10">
    <h1>All Races</h1>
  </div>

  <div class="col-md-2">
    <% if signed_in? %>
      <%= link_to 'Add New Race', new_race_path, class: 'btn btn-primary pull-right' %>
    <% else %>
      <%= link_to 'Login to add new Race', nil, class: 'btn btn-primary pull-right disabled' %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-8">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th>Name</th>
          <th>Distance</th>
          <% if signed_in? %><th>Actions</th><% end %>
        </tr>
      </thead>

      <tbody>
        <% @races.each do |race| %>
          <tr>
            <td><%= link_to race.name, race_path(race) %></td>
            <td><%= race.distance %> km</td>
            
            <% if signed_in? %>
              <td>
                <%= link_to 'Edit', edit_race_path(race), class: 'btn btn-default btn-xs' %>
                <%= link_to 'Delete', race, class: 'btn btn-danger btn-xs', method: :delete, data: { confirm: 'Are you sure?' } %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
