<%= bootstrap_form_for(@result, layout: :horizontal, label_col: 'col-md-2', control_col: 'col-md-8') do |f| %>

  <div class="row">
    <div class="col-md-10"><%= f.alert_message "Please fix the errors below." %></div>
  </div>

  <%= f.collection_select :user_id, User.all, :id, :collection_select_name, selected: current_user.id, label: 'Rider' %>

  <%= f.collection_select :race_id, Race.all, :id, :collection_select_name, prompt: 'Select Race...' %>

  <%= f.text_field :date, 'data-provide' => 'datepicker', 'data-date-autoclose' => true, 'data-date-format' => 'd M yyyy', value: @result.date_for_form, append: ion_icon(:calendar) %>

  <%= f.text_field :duration_s, append: ion_icon('ios-stopwatch-outline') %>

  <%= f.text_field :fastest_duration_s, label: 'Fastest Duration', append: ion_icon('ios-stopwatch-outline') %>

  <%= f.text_field :median_duration_s, label: 'Median Duration', append: ion_icon('ios-stopwatch-outline') %>

  <%= f.text_field :wind, append: ion_icon(:flag) %>

  <%= f.text_field :position, append: ion_icon('ios-people') %>

  <%= f.text_field :finishers, append: ion_icon('ios-people') %>

  <%= f.text_field :timing_url, label: 'Timing URL', append: ion_icon(:link) %>

  <%= f.text_field :strava_url, label: 'Strava URL', append: ion_icon(:link) %>

  <%= f.text_area :comment, append: ion_icon('chatbubbles') %>

  <div class="row push-down">
    <%= f.submit 'Save', class: "btn btn-default col-md-offset-2 col-md-8" %>
  </div>
<% end %>
