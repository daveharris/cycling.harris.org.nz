<%= bootstrap_form_tag(url: timing_team_results_path, layout: :horizontal, label_col: 'col-sm-2', control_col: 'col-sm-6') do |f| %>
  <%= f.collection_select :race_id, Race.all, :id, :collection_select_name, prompt: 'Select Race...' %>
  <%= f.text_field :url, label: 'The Timing Team URL', append: icon(:link) %>

  <%= f.submit 'Import', class: 'btn btn-primary' %>
<% end %>