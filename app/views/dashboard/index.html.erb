<div class="page-header">
  <h2>
    <%= content_tag(:span, "#{current_user.first_name}, ") if signed_in? %>
    <%= content_tag(:span, signed_in? ? "welcome" : "Welcome") %> to your <%= icon('fas', :bicycle) %> dashboard
  </h2>
</div>

<div class="row">
  <% @statistics.each do |label, data| %>
    <div class="panel panel-info col-md-4">
      <div class="panel-heading">
        <h3 class="panel-title"><%= label.to_s.titleize %></h3>
      </div>
      <div class="panel-body">
        <p><strong>Results:</strong>  <%= data[:results] %></p>
        <p><strong>Distance:</strong> <%= number_with_delimiter(data[:distance]) %> km</p>
        <p><strong>Duration:</strong> <%= duration_in_words(data[:duration]) %></p>
      </div>
    </div>
  <% end %>
</div>
